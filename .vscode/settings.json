{
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },
  "editor.formatOnSave": true,
  "files.exclude": {
    "**/node_modules": false,
    "**/.vscode": false,
    "**/.dockerignore": false,
    "**/.gitignore": false,
    "**/.env": false,
    "**/.eslintignore": false,
    "**/.eslintrc": false,
    "**/.prettierrc": false,
    "**/.prettierignore": false,
    "**/.huskyrc": false,
    "**/docker-compose.yml": false,
    "**/Dockerfile": false,
    "**/Dockerfile.dev": false,
    "**/jest.config.js": false,
    "Makefile": false,
    "nginx.conf": false,
    "nodemon.json": false,
    "package-lock.json": false,
    "swagger.yaml": false,
    "src/polyfills.ts": false,
    "tsconfig.json": false,
    "src/tests": false,
    "build/": false
  },
  "git.ignoreLimitWarning": true
}