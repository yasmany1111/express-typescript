{
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },
  "editor.formatOnSave": false,
  "files.exclude": {
    "**/node_modules": true,
    "**/.vscode": true,
    "**/.dockerignore": true,
    "**/.gitignore": true,
    "**/.env": true,
    "**/.eslintignore": true,
    "**/.eslintrc": true,
    "**/.prettierrc": true,
    "**/.prettierignore": true,
    "**/.huskyrc": true,
    "**/docker-compose.yml": true,
    "**/Dockerfile": true,
    "**/Dockerfile.dev": true,
    "**/jest.config.js": true,
    "Makefile": true,
    "nginx.conf": true,
    "nodemon.json": true,
    "package-lock.json": true,
    "package.json": true,
    "swagger.yaml": true,
    "src/polyfills.ts": true,
    "tsconfig.json": true,
    "src/tests": true,
    "build/": true
  },
  "git.ignoreLimitWarning": true
}